@using VMA.CadeMeuMedico.Models;

@helper RetornaDoisBannersMaisRecentes()
{
var bd = new VMA.CadeMeuMedico.Models.CadeMeuMedicoBDEntities();
var banners = bd.BannersPublicitarios.OrderByDescending(b => b.IDBanner).Take(3);

    <div style="width:100%; text-align:center; border:1px solid #efefef; padding:10px; display: flex;">
        @foreach (var b in banners)
        {
            <div style="width:125px; height:125px; margin-right:10px;">
                <a href="@b.LinkBanner">
                    <img src="~/Uploads/Banners/@b.BannerCampanha" title="@b.TituloCampanha" />
                </a>
            </div>
        }
    </div>
}