@model IEnumerable<VMA.CadeMeuMedico.Models.Medicos>

@{
    ViewBag.Title = "Listagem de Médicos";
}

<h2>Médicos</h2>

<p>
    @*@Html.ActionLink("Adicionar novo médico", "Adicionar", null, new { @class = "btn btn-success" })*@

    <a href="@Url.Action("Adicionar")" , class="btn btn-success">
        <i class="fa fa-plus"></i> Médico
    </a>

</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidades)
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidades.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidades.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IDMedico }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IDMedico }, new { @class = "btn btn-default" })
                @Html.ActionLink("Excluir", "Excluir", new { id = item.IDMedico }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
