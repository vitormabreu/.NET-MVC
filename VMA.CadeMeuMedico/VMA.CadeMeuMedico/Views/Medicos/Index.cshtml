@model IEnumerable<VMA.CadeMeuMedico.Models.Medicos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar novo médico", "Adicionar")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidades)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidades)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidades)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidades)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDMedico }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDMedico }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDMedico })
        </td>
    </tr>
}

</table>
