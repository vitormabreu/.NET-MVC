
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadê meu Médico? - @ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/font-awesome.min.css")" />


    <style>
        body {
            padding-top: 60px;
        }
    </style>

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top bg-primary">

        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cadê meu médico?", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav">

                    <li id="menuMedicos">

                        @Html.ActionLink("Médicos", "Index", "Medicos")

                    </li>

                    <li id="menuEspecialidades">

                        @Html.ActionLink("Especialidades", "Index", "Especialidades")

                    </li>

                    <li id="menuCidades">

                        @Html.ActionLink("Cidades", "Index", "Cidades")

                    </li>

                </ul>

            </div>

        </div>

    </div>

    <div class="container">

        @RenderBody()

    </div>

    <script src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")">

    </script>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")">

    </script>

    @RenderSection("script", required: false);

</body>
</html>
