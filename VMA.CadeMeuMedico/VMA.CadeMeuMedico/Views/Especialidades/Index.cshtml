@model IEnumerable<VMA.CadeMeuMedico.Models.Especialidades>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Nova", "Adicionar", null, new {@class = "btn btn-primary"})*@
    <a href="@Url.Action("Adicionar")" , class="btn btn-success">
        <i class="fa fa-plus"></i> Especialidade
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDEspecialidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDEspecialidade }, new {@class = "btn btn-default"})
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.IDEspecialidade }, new { @class = "btn btn-default" })
            @Html.ActionLink("Excluir", "Excluir", new { id=item.IDEspecialidade }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
